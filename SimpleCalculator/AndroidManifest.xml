<?xml version="1.0" encoding="utf-8"?>
<manifest xmlns:android="http://schemas.android.com/apk/res/android"
    package="com.coolbeanstudio.simplecalculator"
    android:versionCode="1"
    android:versionName="1.0" >

    <uses-sdk
        android:minSdkVersion="8"
        android:targetSdkVersion="19" />

    <application
        android:allowBackup="true"
        android:icon="@drawable/ic_launcher"
        android:label="@string/app_name"
        android:theme="@style/AppTheme" >
        <activity
            android:name="com.coolbeanstudio.simplecalculator.SplashScreen"
            android:configChanges="orientation|keyboardHidden|screenSize"
            android:label="@string/app_name"
            android:theme="@style/FullscreenTheme" >
            <intent-filter>
                <action android:name="android.intent.action.MAIN" />

                <category android:name="android.intent.category.LAUNCHER" />
            </intent-filter>
        </activity>
        <activity
            android:name="com.coolbeanstudio.simplecalculator.MenuScreen"
            android:configChanges="orientation|keyboardHidden|screenSize"
            android:label="@string/title_activity_menu_screen"
            android:theme="@style/FullscreenTheme" >
            <intent-filter>
                <action android:name="com.coolbeanstudio.simplecalculator.MenuScreen" />

                <category android:name="android.intent.category.DEFAULT" />
            </intent-filter>
        </activity>
        <activity
            android:name="com.coolbeanstudio.simplecalculator.CalculatorScreen"
            android:configChanges="orientation|keyboardHidden|screenSize"
            android:label="@string/title_activity_calculator_screen"
            android:theme="@style/FullscreenTheme" >
            <intent-filter>
                <action android:name="com.coolbeanstudio.simplecalculator.CalculatorScreen" />

                <category android:name="android.intent.category.DEFAULT" />
            </intent-filter>
        </activity>
        <activity
            android:name="com.coolbeanstudio.simplecalculator.MusicScreen"
            android:configChanges="orientation|keyboardHidden|screenSize"
            android:label="@string/title_activity_music_screen"
            android:theme="@style/FullscreenTheme" >
            <intent-filter>
                <action android:name="com.coolbeanstudio.simplecalculator.MusicScreen" />

                <category android:name="android.intent.category.DEFAULT" />
            </intent-filter>
        </activity>
        <activity
            android:name="com.coolbeanstudio.simplecalculator.Song"
            android:configChanges="orientation|keyboardHidden|screenSize"
            android:label="@string/title_activity_song"
            android:theme="@style/FullscreenTheme" >
        </activity>
    </application>

</manifest>
